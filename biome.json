{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [
      "jazz-tools.json",
      "**/ios/**",
      "**/android/**",
      "packages/jazz-svelte/**",
      "examples/*svelte*/**",
      "examples/file-share/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": false,
    "rules": {
      "recommended": true
    }
  },
  "overrides": [
    {
      "include": ["packages/cojson-storage-indexeddb/**"],
      "linter": {
        "enabled": true,
        "rules": {
          "correctness": {
            "useImportExtensions": "error"
          },
          "suspicious": {
            "noExplicitAny": "info"
          }
        }
      }
    }
  ]
}
