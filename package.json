{
  "name": "jazz-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "husky": "^9.0.11",
    "prettier": "^3.1.1",
    "ts-node": "^10.9.1",
    "turbo": "^1.11.2",
    "typedoc": "^0.25.13",
    "vitest": "1.5.3"
  },
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build && cd homepage/homepage && pnpm run build",
